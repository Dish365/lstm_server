[Unit]
Description=gunicorn daemon for fsroas.com
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/lstm_server
Environment="PATH=/home/ubuntu/lstm_server/venv/bin"
ExecStart=/home/ubuntu/lstm_server/venv/bin/gunicorn \
    --access-logfile - \
    --workers 3 \
    --bind unix:/run/gunicorn/gunicorn.sock \
    lstm_server.wsgi:application

[Install]
WantedBy=multi-user.target